pipeline {
    agent any

    stages {
        stage('Clone Repository') {doc
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('my-python-app')
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    docker.image('my-python-app').inside {
                        sh 'python app.py'
                    }
                }
            }
        }
    }
}
