pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Checkout the source code from the repository
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image with the tag 'jenkins-docker-dnt'
                    docker.build('jenkins-docker-dnt')
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container and execute 'python app.py'
                    docker.image('jenkins-docker-dnt').inside {
                        sh 'python app.py'
                    }
                }
            }
        }
    }
}
